<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="25dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="QR CODE CARTE OK"
            android:id="@+id/textViewpartsok"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:fontFamily="Verdana"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/image_border" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewqrok"
        android:layout_gravity="center_horizontal"
        android:hint="Scan result QR OK"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textColor="#505050"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/textViewpartsok"
        android:layout_marginTop="15dp"
        android:textColorHint="#505050"
        android:background="#dedede" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scan QR OK"
        android:id="@+id/buttonqrok"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@color/darkblue"
        android:textColor="#ffffff"
        android:layout_below="@+id/textViewqrok"
        android:layout_marginTop="15dp" />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="QR CODE CARTE HS"
            android:id="@+id/textViewpnhs"
            android:layout_below="@+id/buttonqrok"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
        android:textIsSelectable="false"
            android:typeface="serif"
            android:textAlignment="gravity"
            android:textColor="#DEDEDE"
            android:singleLine="true"
            android:fontFamily="Verdana"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/image_border" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textviewqrhs"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textIsSelectable="true"
        android:textColor="#505050"
        android:hint="Scan result QR HS"
        android:layout_below="@+id/textViewpnhs"
        android:background="#DEDEDE"
        android:clickable="false"
        android:textColorHint="#505050" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scan QR HS"
        android:id="@+id/buttonqrhs"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:background="@color/darkpurple"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textviewqrhs" />

    <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="MISE  A JOUR"
            android:id="@+id/buttonMAJ"

            android:layout_alignParentStart="false"
        android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:typeface="sans"
            android:background="@drawable/blueshape"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textViewRTNUM"
            android:singleLine="true"
            android:layout_gravity="top"
            android:nestedScrollingEnabled="false"
            android:visibility="invisible" />

    </LinearLayout>

</ScrollView>
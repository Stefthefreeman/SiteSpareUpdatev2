<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/appbackground"
    android:gravity="center_vertical"
    android:scrollIndicators="none"
    android:showDividers="middle"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="18dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SN CARTE OK"
        android:id="@+id/textViewpartsok"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="Verdana"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:background="@drawable/image_border"
        android:padding="3dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textviewSNOK"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:hint="Scan SN OK result"
        android:textStyle="normal|italic"
        android:textIsSelectable="true"
        android:textSize="15dp"
        android:textColor="#505050"
        android:background="#dedede"
        android:editable="false"
        android:padding="3dp"
        android:textColorHint="#505050" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SCAN SN OK"
        android:id="@+id/buttonSNOK"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@color/darkgreen" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="QR CODE CARTE HS"
        android:id="@+id/textViewpnhs"
        android:layout_below="@+id/partsok"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:typeface="serif"
        android:textAlignment="gravity"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:fontFamily="Verdana"
        android:gravity="center_horizontal"
        android:padding="3dp"
        android:background="@drawable/image_border" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textviewQRHS"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:hint="Scan result QR HS"
        android:textSize="15dp"
        android:textStyle="normal|italic"
        android:textColor="#505050"
        android:background="#DEDEDE"
        android:padding="3dp"
        android:textColorHint="#505050"
        android:textIsSelectable="false" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SCAN QR HS"
        android:id="@+id/buttonQRHS"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@color/darkpurple" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="MISE  A JOUR"
        android:id="@+id/buttonMAJ"
        android:layout_below="@+id/sncartehs"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:background="@drawable/blueshape"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewRTNUM"
        android:singleLine="true"
        android:layout_gravity="top"
        android:nestedScrollingEnabled="false"
        android:visibility="invisible" />
</LinearLayout>
    </ScrollView>